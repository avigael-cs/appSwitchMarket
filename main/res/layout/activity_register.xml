<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        tools:layout_editor_absoluteX="173dp"
        tools:layout_editor_absoluteY="139dp" />

    <EditText
        android:id="@+id/RegisterMailButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="251dp" />

    <EditText
        android:id="@+id/RegisterphoneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="327dp" />

    <EditText
        android:id="@+id/RegisterNameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="194dp" />

    <EditText
        android:id="@+id/RegisterPasswordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="396dp" />

    <Button
        android:id="@+id/FinishRegisterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="471dp" />

    <Button
        android:id="@+id/LoginFronRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You have a account ? login"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="529dp" />

    <ProgressBar
        android:id="@+id/LoadingprogressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="608dp"
        tools:visibility="invisible" />

</androidx.constraintlayout.widget.ConstraintLayout>